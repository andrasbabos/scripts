<?xml version="1.0"?>
<!DOCTYPE profile>
<profile xmlns="http://www.suse.com/1.0/yast2ns" xmlns:config="http://www.suse.com/1.0/configns">
  <general>
  <!-- confirm install phase 1 manually -->
    <mode>
      <confirm config:type="boolean">true</confirm>
    </mode>
  </general>
  <bootloader>
  <!-- I don't use it  -->
  </bootloader>
  <partitioning config:type="list">
    <drive>
      <!-- particios tabla wipe -->
      <initialize config:type="boolean">true</initialize>
      <!-- the skip_list is optional and available since openSUSE 12.2 and SLES11 SP2 -->
      <skip_list config:type="list">
        <listentry>
        <!-- skip devices that use the usb-storage driver -->
          <skip_key>driver</skip_key>
          <skip_value>usb-storage</skip_value>
        </listentry>
      </skip_list>
      <!-- create lvm pv, if you skip this then the installer will use simple partitions -->
      <partitions config:type="list">
        <partition>
        	<mount>/boot</mount>
        	<size>1gb</size>
          <partition_nr config:type="integer">1</partition_nr>
        </partition>
     	  <partition>
     	    <lvm_group>system</lvm_group>
     	    <partition_type>primary</partition_type>
     	    <size>max</size>
     	  </partition>
      </partitions>
      <use>all</use>
    </drive>
    <drive>
    <!-- create lvm volumes -->
      <device>/dev/system</device>
      <is_lvm_vg config:type="boolean">true</is_lvm_vg>
      <partitions config:type="list">
      	<partition>
          <filesystem config:type="symbol">ext3</filesystem>
          <lv_name>root_lv</lv_name>
          <mount>/</mount>
          <size>10gb</size>
        </partition>
        <partition>
          <lv_name>swap_lv</lv_name>
          <mount>swap</mount>
          <size>1500mb</size>
        </partition>
      </partitions>
      <pesize>4M</pesize>
      <use>all</use>
    </drive>
  </partitioning>
  <keyboard>
    <keymap>english-us</keymap>
  </keyboard>
  <language>
    <language>en_US</language>
    <languages>en_US</languages>
  </language>
  <software>
    <patterns config:type="list">
      <pattern>base</pattern>
      <pattern>gnome</pattern>
      <pattern>Minimal</pattern>
      <pattern>x11</pattern>
    </patterns>
  </software>
  <networking>
    <dns>
      <dhcp_hostname config:type="boolean">false</dhcp_hostname>
      <domain>example.com</domain>
      <hostname>slesks-client</hostname>
      <nameservers config:type="list">
        <nameserver>192.168.1.10</nameserver>
        <nameserver>192.168.1.3</nameserver>
      </nameservers>
      <resolv_conf_policy>auto</resolv_conf_policy>
      <searchlist config:type="list">
        <search>example.com</search>
      </searchlist>
      <write_hostname config:type="boolean">false</write_hostname>
    </dns>
    <interfaces config:type="list">
      <interface>
        <bootproto>dhcp</bootproto>
        <device>eth0</device>
        <startmode>auto</startmode>
      </interface>
      <!--
      <interface>
        <bootproto>static</bootproto>
        <device>eth0</device>
        <ipaddr>10.0.3.6</ipaddr>
        <prefixlen>24</prefixlen>
        <startmode>auto</startmode>
        <usercontrol>no</usercontrol>
      </interface>
      -->
    </interfaces>
    <!-- Network manager -->
    <managed config:type="boolean">false</managed>
    <ipv6 config:type="boolean">true</ipv6>
    <routing>
      <ip_forward config:type="boolean">false</ip_forward>
      <routes config:type="list">
        <route>
          <destination>default</destination>
          <device>-</device>
          <gateway>192.168.1.1</gateway>
          <netmask>-</netmask>
        </route>
        <route>
          <destination>192.168.2.0</destination>
          <device>eth0</device>
          <gateway>192.168.1.10</gateway>
          <netmask>24</netmask>
        </route>
        </routes>
    </routing>
  </networking>
  <proxy>
    <enabled config:type="boolean">false</enabled>
    <ftp_proxy>http://192.168.1.240:3128</ftp_proxy>
    <http_proxy>http://192.168.1.240:3128</http_proxy>
    <no_proxy>localhost</no_proxy>
    <proxy_password>testpw</proxy_password>
    <proxy_user>testuser</proxy_user>
  </proxy>
  <ntp-client>
    <peers config:type="list">
      <peer>
        <address>control.example.com</address>
        <options>iburst</options>
        <type>server</type>
      </peer>
    </peers>
    <start_at_boot config:type="boolean">true</start_at_boot>
    <start_in_chroot config:type="boolean">true</start_in_chroot>
  </ntp-client>
  <users config:type="list">
    <user>
     <username>root</username>
     <user_password>password</user_password>
     <encrypted config:type="boolean">false</encrypted>
    </user>
    <user>
      <encrypted config:type="boolean">true</encrypted>
      <fullname>test user</fullname>
      <gid>100</gid>
      <uid>1000</uid>
      <user_password>$2y$05$7gbb7zoVD4wmwfwdG8703uTqXcot6amgt/uJyepckk8oyeKYGQvVK</user_password>
      <username>testuser</username>
    </user>
  </users>
<!-- opensuse11.2 ota kivettek az x11 elemet, sles11sp1-ben meg mukodik -->
  <x11>
    <display_manager>gdm</display_manager>
    <window_manager>gnome</window_manager>
  </x11>
  <kdump>
    <add_crash_kernel config:type="boolean">false</add_crash_kernel>
  </kdump>
  <firewall>
    <enable_firewall config:type="boolean">false</enable_firewall>
    <start_firewall config:type="boolean">false</start_firewall>
  </firewall>
  <timezone>
    <hwclock>UTC</hwclock>
    <timezone>Europe/Budapest</timezone>
  </timezone>
</profile>
